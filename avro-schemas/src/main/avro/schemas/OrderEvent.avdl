@namespace("com.hse.kafka.avro.event")
protocol OrderEventProtocol {
    enum OrderStatusAvro{
        PENDING, PAID, PAYMENT_FAILED, CANCELLED, DELIVERED
    }

    record OrderCreatedEventAvro {
        long orderId;
        OrderStatus status;
        int userId;
        double amount;
        @logicalType("timestamp-millis")
        long createdAt;
    }
}